@inject NavigationManager NavigationManager

@if (dataObject is ServersDetailUriChangedMessageData data)
{
    <ServerContent Data="data" />
}
else
{
    <DefaultContent />
}

@code {
    protected object dataObject = null;

    protected override void OnInitialized()
    {
        MessagingCenter.Subscribe<UriChangedMessage>(this, EventType.UriChanged, uriChangedMessage =>
        {
            this.dataObject = uriChangedMessage.Data;

            StateHasChanged();
        });
    }
}
