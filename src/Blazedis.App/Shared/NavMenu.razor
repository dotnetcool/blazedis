@inherits NavMenuBase;

<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Link="/connections/new">New Connection</MudButton>

<MudNavMenu>
    @foreach (var item in configurationItems)
    {
        <MudNavLink Href="@($"/servers/{item.Id}")" Match="NavLinkMatch.All">
            @item.Name
        </MudNavLink>
    }
</MudNavMenu>
